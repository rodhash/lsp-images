{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "nix": {
    "enabled": true
  },
  "dockerfile": {
    "managerFilePatterns": [
      "/^podman/Dockerfile\\..+$/",
      "/^podman/_Dockerfile\\..+$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^nix/.*\\.nix$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\n.*?\"(?<currentValue>.*?)\""
      ]
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "*"
      ],
      "groupName": "all dependencies"
    }
  ]
}
