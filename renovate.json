{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "nix": {
    "enabled": true
  },
  "dockerfile": {
    "fileMatch": ["^podman/Dockerfile\\..+$", "^podman/_Dockerfile\\..+$"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "groupName": "all dependencies"
    }
  ]
}
